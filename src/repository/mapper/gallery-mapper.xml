<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="repository.mapper.GalleryMapper">
	
	<insert id="insert" parameterType="Gallery">
		    <selectKey keyProperty="galleryNo" resultType="Integer">
      		  SELECT GALLERY_SEQ.NEXTVAL FROM DUAL
    		</selectKey>
		INSERT INTO
		GALLERY(GALLERY_NO,TITLE,ID,WRITE_DATE,CONTENT,AUTHORITY_CODE)
		VALUES
		(GALLERY_SEQ.NEXTVAL,#{title},#{id},#{writeDate},#{content},#{authorityCode})
	</insert>

	<insert id="insertImg" parameterType="GalleryImg">
		INSERT INTO
		GALLERY_IMG(GALLERY_NO, GALLERY_IMG_NO, GALLERY_PATH)
		VALUES
		(GALLERY_SEQ.CURRVAL,GALLERY_IMG_SEQ.NEXTVAL,#{galleryPath})
	</insert>

	<select id="selectGalleryCount" resultType="integer">
		SELECT COUNT(*) FROM
		GALLERY
	</select>
	
	<select id="select" parameterType="integer" resultMap="galleryMap">
		SELECT * FROM GALLERY WHERE GALLERY_NO=#{galleryNo}
	</select>
	
	<select id="selectGalleryImg" resultType="galleryImg">
		SELECT * FROM GALLERY_IMG WHERE GALLERY_NO = #{galleryNo}
	</select>

	<select id="selectGalleryList" resultMap="galleryResultMap" parameterType="Map">
		
		SELECT * FROM (
			SELECT ROWNUM R, A.* FROM(	
				SELECT G.GALLERY_NO, G.TITLE, G.ID, G.WRITE_DATE, G.CONTENT, G.AUTHORITY_CODE, 
		      	 IMG.GALLERY_IMG_NO, IMG.GALLERY_PATH
		      	 FROM GALLERY G left outer join GALLERY_IMG IMG
		      	 WHERE GALLERY_NO=#{galleryNo}
		      	 ORDER BY G.GALLERY_NO DESC
			) A	)
		WHERE R BETWEEN #{startRow} AND #{count}
	</select>

	<resultMap type="Gallery" id="galleryMap">
		<result column="gallery_no" property="galleryNo" />
		<result column="title" property="title" />
		<result column="id" property="id" />
		<result column="write_date" property="writeDate" />
		<result column="content" property="content" />
		<result column="authority_code" property="authorityCode" />
	</resultMap>
	
	<resultMap id="galleryResultMap" type="Gallery">
		<id property="galleryNo" column="g.gallery_no" />
		<result property="galleryNo" column="gallery_no" />
		<result property="title" column="title" />
		<result property="id" column="id" />
		<result property="writeDate" column="write_date" />
		<result property="content" column="content" />
		<result property="authorityCode" column="authority_code" />
		<result property="galleryImgNo" column="gallery_img_no" />
		<result property="galleryPath" column="gallery_path" />
		<collection property="galleryImgList" javaType="ArrayList" 
		 column="GALLERY_NO" ofType="galleryImg" select="selectGalleryImg"/>
	</resultMap>

</mapper>